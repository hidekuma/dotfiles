        },
        "o3": {
          "name": "o3",
          "limit": {
            "context": 200000,
            "output": 100000
          },
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"]
          }
        },
        "o3-mini": {
          "name": "o3 Mini",
          "limit": {
            "context": 200000,
            "output": 100000
          },
          "modalities": {
            "input": ["text"],
            "output": ["text"]
          }
        }
      },
      "options": {
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": [
          "reasoning.encrypted_content"
        ],
        "store": false
      }
    }
  }
}
